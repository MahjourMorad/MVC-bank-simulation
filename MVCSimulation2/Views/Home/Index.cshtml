@{
    ViewData["Title"] = "Home Page";
}

    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label for="firstnumber" class="col-sm-2 control-label">
                Loan
                Amount
            </label>
            <div class="col-sm-10">
                <input type="text" value="@ViewData["loanAmount"]" class="form-control"
                       name="loanAmount">
            </div>
        </div>
        <div class="form-group">
            <label for="secondnumber" class="col-sm-2 control-label">
                Loan
                Term
            </label>
            <div class="col-sm-10">
                <input type="text" value="@ViewData["loanTerm"]" class="form-control"
                       name="loanTerm">
            </div>
        </div>
        <div class="form-group">
            <label for="secondnumber" class="col-sm-2 control-label">
                Interest
                Rate
            </label>
            <div class="col-sm-10">
                <input type="text" value="@ViewData["interestRate"]" class="form-control"
                       name="interestRate">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button name="min_btn" type="submit" class="btn btndefault">Calculate</button>
            </div>
        </div>
        <div class="form-group">
            <label for="result" class="col-sm-2 control-label">Result</label>
            <div class="col-sm-10">
                <input type="text" value="@ViewData["result"]" class="form-control"
                       name="Result">
            </div>
        </div>
    </form>
